<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:weightSum="1"
    tools:context=".ActivityWeather">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_search"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="searchWeather"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/weather_et"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:hint="          输入地点          "
            android:textSize="20dp" />

        <Button
            android:id="@+id/wb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/mainbutton"
            android:gravity="center"
            android:onClick="show"
            android:text="查询天气"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/weather_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ffe4e1" />
        <!--晴朗-->
        <TextView
            android:id="@+id/weather_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ffe4e1" />
        <!--温度-->
        <TextView
            android:id="@+id/weather_temp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ffe4e1" />
        <!--风向-->
        <TextView
            android:id="@+id/weather_wind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#ffe4e1" />

        <TextView
            android:id="@+id/weather_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>

</LinearLayout>
